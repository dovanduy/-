    ElseIf 容错判定() Then
        Call 场景相关操作.关闭界面(所在场景)
        Goto 进界面
    ElseIf 容错判定() = False Then
        TracePrint "无法进入目标界面"
        ShowMessage "无法进入目标界面", 2000, 50, 620
        Delay 2000
    End If
End Function

Function 城内选中建筑(点击坐标X, 点击坐标Y, 附件名称, 是否点击, 目标界面, 展开操作类型)
    //如果是否点击为True,则务必确认目标界面值
	
	Dim 建筑信息
    容错参数 = 0
    Rem 点建筑
	TracePrint "点击",点击坐标X, 点击坐标Y
    Touch 点击坐标X, 点击坐标Y, 100
    Delay 2000
    建筑信息 = 选中建筑判定(附件名称)
    TracePrint "容错判定", 容错判定()
    If 建筑信息(0) = True Then 
        TracePrint "选中目标建筑"
        If 是否点击 = True Then
            Call 城内进固定界面(目标界面, 建筑信息(1), 建筑信息(2), 展开操作类型)
        End IF
    ElseIf 容错判定() Then
        Goto 点建筑
    ElseIf 容错判定() = False Then
        TracePrint "无法选中目标建筑"
        ShowMessage "无法选中目标建筑", 2000, 50, 620
        Delay 2000
    End If
End Function

Function 选中建筑判定(附件名称)
    Dim 是否选中, intX, intY
    FindPic 150,500,400,900,附件名称,"000000",0,0.7,intX,intY
    If intX > -1 And intY > -1 Then
        是否选中 = True
    Else
        是否选中 = False
    End If
    选中建筑判定 = Array(是否选中, intX, intY)
End Function

